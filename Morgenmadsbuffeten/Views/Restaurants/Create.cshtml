@model Morgenmadsbuffeten.Models.Restaurant

@{
    ViewData["Title"] = "Create";
}

<label class="labelclass" style="font-size:4em">Restaurant</label>
<br/>
<label class="labelclass" style="font-size:2em">Opret ny:</label>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountAdults" class="control-label"></label>
                <input asp-for="AmountAdults" class="form-control" />
                <span asp-validation-for="AmountAdults" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountChildren" class="control-label"></label>
                <input asp-for="AmountChildren" class="form-control" />
                <span asp-validation-for="AmountChildren" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="Index"><input type="submit" value="Se listen" /></a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
