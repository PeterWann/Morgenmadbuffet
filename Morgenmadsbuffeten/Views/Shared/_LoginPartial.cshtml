@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link"asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><label type="submit" class="labelclass2" style="font-size:1.1em">@User.Identity.Name!</label></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <label type="submit" class="labelclass2" style="font-size:1.1em">Logout</label>
        </a>

    </li>
}
else
{
    <li class="nav-item">

        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login"><label type="submit" class="labelclass2" style="font-size:1.1em">Login</label></a>
    </li>
}
</ul>
